layout {
    pane
    pane size=1 split_direction="vertical" {
        pane size="80%" borderless=true {
            plugin location="compact-bar"
        }
        pane size="20%" borderless=true {
            plugin location="file:~/.config/zellij/plugins/zellij-what-time.wasm" {
                date_format ""
                time_format "%H.%M"
            }
        }
    }
}
